<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/width_course_card"
    android:layout_marginLeft="@dimen/control_inset_material_big"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:background="@color/colorWhiteSmoke"
                android:padding="25dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_collections_bookmark"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    fontPath="fonts/latoRegular.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/enter_text_bottom"
                    android:paddingRight="8dp"
                    android:paddingTop="4dp"
                    android:text="Matematika Dasar"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/text_size_caption_material"
                    tools:ignore="MissingPrefix" />

                <TextView
                    android:id="@+id/price"
                    fontPath="fonts/latoLight.ttf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rp30.000"
                    android:textColor="@color/colorBlack"
                    android:textSize="10sp"
                    tools:ignore="MissingPrefix" />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</LinearLayout>