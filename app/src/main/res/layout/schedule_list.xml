<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:id="@+id/group_view"
        android:layout_gravity="center_vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/order_linear"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/control_inset_material_end">

            <ImageView
                android:id="@+id/order_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/zzz_calendar_check" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/order_linear"
            android:paddingTop="@dimen/control_padding_material">
            <TextView
                android:id="@id/name"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="This order"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimary"
                android:paddingRight="@dimen/control_padding_material"
                fontPath="fonts/latoRegular.ttf"
                tools:ignore="MissingPrefix"
                android:textSize="@dimen/text_size_small_material"
                android:layout_marginBottom="@dimen/control_inset_material" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>
